{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 8,
  "include": [
    "gmx-base-release.json"
  ],
  "configurePresets": [
    {
      "name": "hip-gmx",
      "inherits": "gmx-base-release",
      "hidden": true,
      "cacheVariables": {
        "CMAKE_C_COMPILER": "hipcc",
        "CMAKE_CXX_COMPILER": "hipcc",
        "CMAKE_PREFIX_PATH": "/rocPRIM/build/install/lib/cmake/rocprim/;/opt/rocm/lib/cmake/",
        "GMX_GPU": "HIP"
      }
    },
    {
      "name": "hip-cdna",
      "inherits": "hip-gmx",
      "cacheVariables": {
        "GMX_HIP_TARGET_ARCH": "gfx906,gfx908,gfx90a,gfx942"
      }
    },
    {
      "name": "hip-rdna",
      "inherits": "hip-gmx",
      "cacheVariables": {
        "GMX_HIP_TARGET_ARCH": "hip:gfx1201,gfx1030,gfx1100"
      }
    }
  ]
}
