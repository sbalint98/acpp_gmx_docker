{
  "$schema": "https://cmake.org/cmake/help/latest/_downloads/3e2d73bff478d88a7de0de736ba5e361/schema.json",
  "version": 8,
  "cmakeMinimumRequired": {
    "major": 3,
    "minor": 23
  },
  "configurePresets": [
    {
      "name": "base-config",
      "hidden": true,
      "generator": "Ninja",
      "binaryDir": "${sourceDir}/build",
      "installDir": "${sourceDir}/build/install",
      "cacheVariables": {
        "CMAKE_BUILD_TYPE": "Release"
      }
    },
    {
      "name": "sscp",
      "displayName": "Build for SSCP (Dynamic LLVM)",
      "inherits": "base-config",
      "cacheVariables": {
        "LLVM_DIR": "/usr/lib/llvm-$env{LLVM_SSCP_VERSION}/lib/cmake/llvm/",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    },
    {
      "name": "smcp",
      "displayName": "Build for SMCP (Dynamic LLVM)",
      "inherits": "base-config",
      "cacheVariables": {
        "LLVM_DIR": "/usr/lib/llvm-$env{LLVM_SMCP_VERSION}/lib/cmake/llvm/",
        "CMAKE_INSTALL_PREFIX": "${sourceDir}/install"
      }
    } 
  ]
}


